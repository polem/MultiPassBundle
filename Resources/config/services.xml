<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="multipass.class">Multipass\Configuration</parameter>
        <parameter key="multipass_factory.class">Multipass\Configuration</parameter>
    </parameters>

    <services>
        <service id="multipass" class="%multipass.class%" factory-class="%multipass_factory.class%" factory-method="getInstance">
            <!--<call method="registerConfigs">
                <argument type="service" id="my_mailer" />
            </call>-->
            <call method="register" />
        </service>

        <service id="multipass.security.authentication.provider"
            class="Polem\MultipassBundle\Security\Authentication\Provider\LultipassProvider" public="false">
            <argument /> <!-- User Provider -->
        </service>

        <service id="multipass.security.authentication.listener"
            class="Polem\MultipassBundle\Security\Firewall\MultipassListener" public="false">
            <argument type="service" id="security.context"/>
            <argument type="service" id="security.authentication.manager" />
        </service>
    </services>
</container>
